doctype html
html
    head
        title Case Statement in Pug
    body
        // orderStatus => Pending || In_Transit || Completed
        //- - const orderStatus = 'In_Transit';
        - const orderStatus = 2;

        case orderStatus
            when 'Pending'
                p Your order has been placed and will be sent shortly.
            when 2
                p Your order is on the way, you should receive it soon.
            when 'Completed'
                p Your order has been completed.
            default
                p Sorry! We aren't sure what happened with your order...
